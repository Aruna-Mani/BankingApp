    <script>
        function checkAuth() {
            let token = localStorage.getItem("jwtToken") || sessionStorage.getItem("jwtToken");
            let navMenu = document.getElementById("navMenu");

            if (token) {
                // User is authenticated (JWT token exists)
                navMenu.innerHTML = `
                        <li class="nav-item"><a class="nav-link" href="/BankingDashboard/Index">Manage Account</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Profile</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Settings</a></li>
                        <li class="nav-item"><a class="nav-link" onclick="logout();" style="cursor:pointer;">Logout</a></li>
                    `;
            } else {
                // User is not authenticated
                navMenu.innerHTML = `
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                    `;
            }
        }

        function logout() {
            localStorage.removeItem("jwtToken");
            sessionStorage.removeItem("jwtToken");
            window.location.href = "/Account/Login"; // Redirect to login page
        }

        // Run the function on page load
        checkAuth();
    </script>
