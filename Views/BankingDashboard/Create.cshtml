@model BankAccount

@{
    ViewData["Title"] = Model?.Id == 0 ? "Create Account" : "Edit Account";
}

<form asp-action="Create">
    <div class="form-group">
        <label for="AccountNumber">Account Number</label>
        <input type="text" class="form-control" id="AccountNumber" name="AccountNumber" />
        <span class="text-danger" asp-validation-for="AccountNumber"></span>
    </div>
    <div class="form-group">
        <label for="AccountHolder">Account Holder Name</label>
        <input type="text" class="form-control" id="AccountHolder" name="AccountHolder" />
        <span class="text-danger" asp-validation-for="AccountHolder"></span>
    </div>
    <div class="form-group">
        <label for="Balance">Initial Balance</label>
        <input type="number" class="form-control" id="Balance" name="Balance" />
        <span class="text-danger" asp-validation-for="Balance"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Account</button>
</form>
